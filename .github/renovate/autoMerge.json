{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "description": "Auto merge patch updates",
      "automerge": false,
      "ignoreTests": true,
      "matchCurrentVersion": "!/^0/",
      "matchUpdateTypes": ["patch"],
      "minimumReleaseAge": "7 days"
    }
  ]
}
